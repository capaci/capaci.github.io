section(id="contact", class="contact")
    div(class="wrapper")
        h1(class="contact__title")= contact_title
        p(class="contact__text")= contact_text
        div(class="contact__info")
            h2(class="contact__info--title")= "VocÃª pode falar comigo por:"
            p= "Telefone: (41) 9 9646 2689"
            p= "Email: rafaelcapacipereira@gmail.com"
            P= "Pelas redes sociais: "
            div(class="redes-sociais")
                ul(class="social")
                    -each social in social_networks
                        li(class="social__item")
                            a(href=social.link class="social__item--link" title=social.title target="_blank")
                                i(class="fa fa-#{social.name} social__item--link--icon fa-2x" aria-hidden="true")
        div(class="contact__form")
            h2(class="contact__form--title")= "Ou se preferir, pode deixar sua mensagem"
            form(class="form")
                div(class="form__element")
                    input(class="form__element--input" id="name" name="name")
                    label(for="name" class="form__element--label")= "Nome"
                div(class="form__element")
                    input(class="form__element--input" id="email" name="email")
                    label(for="email" class="form__element--label")= "Email"
                div(class="form__element")
                    input(class="form__element--input" id="fone" name="fone")
                    label(for="fone" class="form__element--label")
                        | Telefone 
                        span(class="form__element--label--optional")= "(opcional)"
                div(class="form__element")
                    textarea(class="form__element--textarea" id="message" name="message")
                    label(for="message" class="form__element--label")= "Mensagem"
