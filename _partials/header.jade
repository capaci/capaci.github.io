div(class="open")
    span(class="cls")
    span
        ul(class="sub-menu")
            li(class="sub-menu__item")
                a(href="#about" title="about", class="sub-menu__item--link")= "Sobre / About"
            li(class="sub-menu__item")
                a(href="#skills" title="skills", class="sub-menu__item--link")= "Habilidades / Skills"
            li(class="sub-menu__item")
                a(href="#portfolio" title="jobs", class="sub-menu__item--link")= "Trabalhos / Jobs"
            li(class="sub-menu__item")
                a(href="#contact" title="contact", class="sub-menu__item--link")= "Contato / Contact"
    span(class="cls")

header(class="header", role="banner")
    div(class="header__text")
        h1(class="header__text--title")= name
        p(class="header__text--subtitle")= welcome
        div(class="redes-sociais")
            ul(class="social")
                -each social in social_networks
                    li(class="social__item")
                        a(href=social.link class="social__item--link" title=social.title target="_blank")
                            i(class="fa fa-#{social.name} social__item--link--icon fa-2x" aria-hidden="true")
